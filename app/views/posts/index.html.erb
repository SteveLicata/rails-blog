<h3>All Posts: </h3>

<h2>
  <%= link_to ("Create A New Blog Post"), new_post_path %>
  <!-- link to create a new post -->
</h2>

  <hr>

<h2>
  <% @posts.each do |post| %>
    <p>Post Title:</p>
    <%= post.id %>.
    <%= post.title %> <br><br>
    <p>Post:</p>
    <%= post.content %> <br>
  <!-- loop displays all posts -->
    <br><br>

    <%= link_to ("User's Profile"), post_path(post.id) %> |
    <!-- link to users profile -->
    <%= link_to 'Delete Post',  { action: :destroy, id: post.id }, method: :delete %>
    <!-- link to delete user -->
    <hr>

  <% end %>
</h2>
