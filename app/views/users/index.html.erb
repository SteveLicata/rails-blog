<h3>All Users</h3>
<!-- displays all users -->
<h2>
  <ul><% @users.each do |user| %>
    <li>
      <%= user.id %>.
      <%= user.fname %>
      <%= user.lname %>
    </li>
    <li>
      <%= user.username %>
    </li>
    <li>
      <%= user.email %>
    </li>

    <br><br>
    <!-- link to users profile page -->
    <%= link_to ("User's Profile page"), user_path(user.id) %> |
    <!-- link deletes user -->
    <%= link_to 'Delete user',  { action: :destroy, id: user.id }, method: :delete %>
    <hr>

    <% end %>
  </ul>
</h2>
